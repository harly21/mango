<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/spotlight_arrow"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="517dp"
        android:layout_marginStart="66dp"
        android:background="@drawable/game_hintbox_arrow"
        android:elevation="355dp"
        />

    <RelativeLayout
        android:id="@+id/spotlight_mock_menu"
        android:layout_width="280dp"
        android:layout_height="124dp"
        android:layout_marginTop="534dp"
        android:layout_marginStart="56dp"
        android:background="@color/paletteWhite100">

        <TextView
            android:id="@+id/spotlight_title"
            android:layout_width="248dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="92dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:backgroundTint="@color/paletteWhite100"
            android:textColor="@color/paletteDarkBlueA100"
            tools:text="Fast access to your favorite games" />

        <TextView
            android:id="@+id/spotlight_message"
            android:layout_width="248dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="16dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:backgroundTint="@color/paletteWhite100"
            android:textColor="@color/paletteDarkBlueA100"
            tools:text="Press to create a shortcut to your home screen." />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="96dp"
            android:layout_height="32dp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="184dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:background="#0a84ff"
            android:clickable="true"
            android:text="OK"
            android:textColor="@color/paletteWhite100"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>